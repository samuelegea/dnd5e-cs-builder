<%= form_with(model: race) do |form| %>
  <% if race.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(race.errors.count, "error") %> prohibited this race from being saved:</h2>

      <ul>
        <% race.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :size, style: "display: block" %>
    <%= form.select :size, options_for_select(Race.sizes.map {|key, value| [key.titleize, Race.sizes.key(value)]}) %>
  </div>

  <div>
    <%= form.label :speed, style: "display: block" %>
    <%= form.number_field :speed %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
